<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/appad_v18_button_success_normal_bg_night"
    android:orientation="vertical">


    <FrameLayout
        android:id="@+id/fl_main"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.92" />

    <RadioGroup

        android:id="@+id/rg_main"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.08"

        android:background="@color/screen_bg"
        android:gravity="center_vertical"
        android:orientation="horizontal">


        <RadioButton
            android:id="@+id/rb_shop"
            android:layout_width="0dp"

            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"

            android:drawablePadding="3dp"
            android:drawableTop="@drawable/rb_shop_drawabletop_selector"
            android:gravity="center"
            android:text="商店"
            android:textSize="10sp"
            android:textColor="@drawable/rb_shop_drawabletop_textcolor_selector" />

        <RadioButton
            android:id="@+id/rb_magazine"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:drawablePadding="3dp"
            android:drawableTop="@drawable/rb_magazine_drawabletop_selector"
            android:gravity="center"
            android:text="杂志"
            android:textSize="10sp"
            android:textColor="@drawable/rb_shop_drawabletop_textcolor_selector" />


        <RadioButton
            android:id="@+id/rb_expert"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:drawablePadding="3dp"
            android:drawableTop="@drawable/rb_expert_drawabletop_selector"
            android:gravity="center"
            android:text="达人"
            android:textSize="10sp"
            android:textColor="@drawable/rb_shop_drawabletop_textcolor_selector" />

        <RadioButton
            android:id="@+id/rb_share"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:drawablePadding="3dp"
            android:drawableTop="@drawable/rb_share_drawabletop_selector"
            android:gravity="center"
            android:text="分享"
            android:textSize="10sp"
            android:textColor="@drawable/rb_shop_drawabletop_textcolor_selector" />

        <RadioButton
            android:id="@+id/rb_self"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:drawablePadding="3dp"
            android:drawableTop="@drawable/rb_self_drawabletop_selector"
            android:gravity="center"
            android:text="个人"
            android:textSize="10sp"
            android:textColor="@drawable/rb_shop_drawabletop_textcolor_selector" />
    </RadioGroup>


</LinearLayout>